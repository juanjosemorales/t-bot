html
  head
    title Tutoring App 
    link(rel="stylesheet", href="https://bootswatch.com/4/flatly/bootstrap.min.css")
    meta(charset="UTF-8")
      
  body
    main
      block nav
        - var main_menu = {'Home':'/', 'Workspace': '/workspace', 'Account':'/account', 'Contact': '/contact'};
        - var s_menu = {'Sign Up': '/signup', 'Log In': '/login', 'Log Out': '/logout'};
        - var selected = 'Home';
        .navbar.navbar-expand-lg.navbar-dark.bg-primary
          a.navbar-brand(href="#") T-Bot
          button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon
          .collapse.navbar-collapse(id="navbarColor01")
            ul.navbar-nav.mr-auto
              each val,key in main_menu
                  if selected === key
                    li.nav-item.active
                      a.nav-link.active(href=val)= key  
                  else
                    li.nav-item
                      a.nav-link(href=val)= key 
            ul.navbar-nav.right
              each val,key in s_menu
                li.nav-item
                  a.nav-link(href=val)= key
      block header
        .jumbotron
          h1.display3(align="center") T-Bot - Online Tutoring Platform
          h6.display3(align="center") Hi #{display.email}
      
      block content
